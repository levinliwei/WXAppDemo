/* 设置页面背景色 */
page{
    background-color: #1F1F1F
}
.home-parent{
    padding: 10px;
}
.scroll-x{
    height:140px;
    white-space:nowrap;
    display:flex;
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.view-parent{
    display:inline-block;
}
