.btn-select {
    flex-direction: column;
    margin: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.big-btn{
    width: 70px;
    height: 70px;
}

.small-btn{
    width: 60px;
    height: 40px;
}

.btn-unselect {
    border: 3rpx solid #3f3f3f;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    flex-direction: column;
    margin: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.text-big-style{
    font-size: 16px;
    color: #fff;
}

.text-small-style{
    font-size: 10px;
    color: #fff;
}

.btn-bg-style {
    margin-top: 80px;
    margin-left: 16px;
    margin-right: 16px;
}

.btn-style{
    color: #fff;
    font-size: 18px;
    background: #DF9211;
}
